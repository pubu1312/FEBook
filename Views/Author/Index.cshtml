@model IEnumerable<Author>
@{
    ViewData["Title"] = "Author Index";
} 

<div class="container">
    <h2>
        <a asp-controller="Author" asp-action="Create">Create new Author</a>
    </h2>
    <h2>Authors</h2>
    <table class="table table-striped table-bordered" id="sortTable">
        <thead>
            <tr>
                <th>Author ID</th>
                <th>Author Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Author in Model)
            {
                <tr>
                    <td>@Author.AuthorId</td>
                    <td>@Author.AuthorName</td>
                    <td>
                        <a asp-controller="Author" asp-action="Detail" asp-route-id="@Author.AuthorId">View details</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>