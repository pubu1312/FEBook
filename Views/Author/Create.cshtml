</head>

<body>
	<div class="super_container">
		<!-- Header -->
		<header class="header trans_300">
			<!-- Top Navigation -->
			<div class="top_nav">
				<div class="container">
					<div class="row">
						<div class="col-md-6">
							<div class="top_nav_left"></div>
						</div>
						<div class="col-md-6 text-right">
							<div class="top_nav_right">
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Main Navigation -->

			<div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a asp-controller="Home" asp-action="Index">F<span>E-Book</span></a>
                            </div>
                            <nav class="navbar">
                                <div>
                                    <a class="home" asp-controller="Home" asp-action="Index">HOME</a>
                                </div>
                                <form asp-controller="Home" asp-action="Index">
									<div class="search-bar grid-container">
										<input type="search" class="form-control rounded" name="SearchString"
											placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
										<button type="submit" value="Filter" class="btn">Search</button>
									</div>
								</form>
                                <ul class="navbar_user">
                                    <div class="menu">
                                        <img src="~/images/menu.png" alt="">
                                        <div class="dropdown-content">
                                            <a asp-controller="Account" asp-action="ProfileUser">Profile</a>
                                            <a asp-controller="Book" asp-action="Index">Manage Book</a>
                                            <a asp-controller="Account" asp-action="Index">Manage User</a>
                                            <a asp-controller="Major" asp-action="Index">Manage Major</a>
                                            <a asp-controller="Subject" asp-action="Index">Manage Subject</a>
                                            <a asp-controller="Author" asp-action="Index">Manage Author</a>
                                            <a asp-controller="Home" asp-action="Logout">Logout</a>
                                        </div>
                                    </div>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

		</header>

		<div class="fs_menu_overlay"></div>
	</div>

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form method="POST" asp-action="Create" class="login100-form validate-form">
					<span class="login100-form-title">
						Author
					</span>
					<div class="wrap-input100 validate-input">
						<h5>Author Name</h5>
						<input asp-for="AuthorName" class="input100" type="text" placeholder="Yamada Ichiro">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input">
						<h5>Profiles</h5>
						<input asp-for="Profiles" class="input100" type="text" placeholder="He is hehe">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>


					<div class="container-login100-form-btn">
						<input type="submit" value="Create" button class="login100-form-btn">
						</button>
					</div>
					<br>
				</form>
				<a asp-action="Index"><button class="login100-form-btn2" style="margin-bottom:100%">Back</button></a>
			</div>
		</div>
	</div>

	<footer class="footer">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div
						class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
						<ul class="footer_nav">
							<li><a href="#">Blog</a></li>
							<li><a href="#">FAQs</a></li>
							<li><a asp-controller="Home" asp-action="Index">Contact us</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-6">
					<div
						class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
						<ul>
							<li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
							<li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
