@model dynamic
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" />
    <link rel="stylesheet" href="~/plugins/OwlCarousel2-2.2.1/animate.css" />
    <link rel="stylesheet" href="~/plugins/jquery-ui-1.12.1.custom/jquery-ui.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>>
    <link rel="stylesheet" href="~/styles/manage.css" />

</head>

<body>



    <div class="super_container">

        <!-- Header -->

        <header class="header trans_300">


            <!-- Main Navigation -->

            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a asp-controller="Home" asp-action="Index">F<span>E-BOOK</span></a>
                            </div>
                            <nav class="navbar">
                                <div>
                                    <a class="home" asp-controller="Home" asp-action="Index">HOME</a>
                                    <div class="dropdown">
                                        <button class="dropbtn">Major</button>
                                        <div class="dropdown-content">
                                            <a href="#">Software Engineering</a>
                                            <a href="#">Graphic Design</a>
                                            <a href="#">Business Administration</a>
                                        </div>
                                    </div>
                                </div>
                                <form asp-controller="Home" asp-action="Index">
									<div class="search-bar grid-container">
										<input type="search" class="form-control rounded" name="SearchString"
											placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
										<button type="submit" value="Filter" class="btn">Search</button>
									</div>
								</form>
                                <ul class="navbar_user">
                                    <div class="menu">
                                        <img src="~/images/menu.png" alt="">
                                        <div class="dropdown-content">
                                            <a asp-controller="Account" asp-action="ProfileUser">Profile</a>
                                            <a asp-controller="Book" asp-action="Index">Manage Book</a>
                                            <a asp-controller="Account" asp-action="Index">Manage User</a>
                                            <a asp-controller="Major" asp-action="Index">Manage Major</a>
                                            <a asp-controller="Subject" asp-action="Index">Manage Subject</a>
                                            <a asp-controller="Author" asp-action="Index">Manage Author</a>
                                            <a asp-controller="Home" asp-action="Logout">Logout</a>
                                        </div>
                                    </div>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>


        <div class="fs_menu_overlay"></div>

        <div class="fs_menu_overlay"></div>

        <div class="container product_section_container">
            <div class="row">
                <body>
                    <div class="container">
                        <div class="table-wrapper">
                            <div class="table-title">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h2>Manage Books</h2>
                                    </div>
                                    <div class="col-sm-6">
                                        <a asp-action="Create"><button class="btn btn-success">Add new book</button></a>
                                        <a href="#deleteUserModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Book Name</th>
                                        <th>Book Cover</th>
                                        <th>Year Of Public</th>
                                        <th>Languages</th>
                                        <th>Update Date</th>
                                        @foreach (var Book in Model.BookList){
                                        <tr>
                                            <td>@Book.BookName</td>
                                            <td><img src="~/@Book.BookCover" height="284" width="173" alt=""></td>
                                            <td>@Book.YearOfPublic</td>
                                            <td>@Book.Languages</td>
                                            <td>@Book.UpdateDate</td>
                                            <td>
                                                <a class="fa fa-pencil fa-2x" aria-hidden="true" asp-controller="Book" asp-action="Edit" asp-route-Id="@Book.BookId"></a>
                                                <a style="padding-left:15px" class="fa fa-trash fa-2x" aria-hidden="true" asp-controller="Book" asp-action="DeleteOnce" asp-route-Id="@Book.BookId"></a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                            </table>
                        </div>

                        <div class="container">
                            <div class="table-wrapper">
                                <div class="clearfix">
                                <div class="hint-text" hidden>Showing <b>5</b> out of <b>25</b> entries</div>
                            </div>
                            <div class="table-title">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h2>Deleted List</h2>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Book Name</th>
                                        <th>Book Cover</th>
                                        <th>Year Of Public</th>
                                        <th>Languages</th>
                                        <th>Update Date</th>

                                        @foreach (var Book in Model.BookDeletedList){
                                        <tr>
                                            <td>@Book.BookName</td>
                                            <td><img src="~/@Book.BookCover" height="284" width="173" alt=""></td>
                                            <td>@Book.YearOfPublic</td>
                                            <td>@Book.Languages</td>
                                            <td>@Book.UpdateDate</td>
                                            <td>
                                                <a class="fa fa-undo fa-2x" aria-hidden="true" asp-controller="Book" asp-action="Restore" asp-route-Id="@Book.BookId"></a>
                                                <a style="padding-left:15px" class="fa fa-trash fa-2x" aria-hidden="true" asp-controller="Book" asp-action="Delete" asp-route-Id="@Book.BookId"></a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </body>
                <!-- Footer -->
            </div>

</body>

</html>
<!-- partial -->
<script src="~/js/script.js"></script>

</html>