@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
} 

<div class="container">
    <h2>
        <a asp-controller="Book" asp-action="Create">Create new Book</a>
    </h2>
    <h2>Books</h2>
    <table class="table table-striped table-bordered" id="sortTable">
        <thead>
            <tr>
                <th>Book ID</th>
                <th>Book Name</th>
                <th>Book Cover</th>
                <th>Year of public</th>
                <th>Update Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Book in Model)
            {
                <tr>
                    <td>@Book.BookId</td>
                    <td>@Book.BookName</td>
                    <td>@Book.BookCover</td>
                    <td>@Book.YearOfPublic</td>
                    <td>@Book.UpdateDate</td>
                    <td>
                        <a asp-controller="Book" asp-action="Detail" asp-route-id="@Book.BookId">View details</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>