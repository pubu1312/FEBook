@model dynamic
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" />
    <link rel="stylesheet" href="~/plugins/OwlCarousel2-2.2.1/animate.css" />
    <link rel="stylesheet" href="~/plugins/jquery-ui-1.12.1.custom/jquery-ui.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>>
    <link rel="stylesheet" href="~/styles/manage.css" />

</head>

<body>



    <div class="super_container">

        <!-- Header -->

        <header class="header trans_300">

            <!-- Main Navigation -->

            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a asp-controller="Home" asp-action="Index">F<span>E-Book</span></a>
                            </div>
                            <nav class="navbar">
                                <div>
                                    <a class="home" asp-controller="Home" asp-action="Index">HOME</a>
                                    <div class="dropdown">
                                        <button class="dropbtn">Major</button>
                                        <div class="dropdown-content">
                                            <a href="#">Software Engineering</a>
                                            <a href="#">Graphic Design</a>
                                            <a href="#">Business Administration</a>
                                        </div>
                                    </div>
                                </div>
                                <ul class="navbar_user">
                                    <div class="menu">
                                        <img src="~/images/menu.png" alt="">
                                        <div class="dropdown-content">
                                            <a asp-controller="Account" asp-action="ProfileUser">Profile</a>
                                            <a asp-controller="Book" asp-action="Index">Manage Book</a>
                                            <a asp-controller="Account" asp-action="Index">Manage User</a>
                                            <a asp-controller="Major" asp-action="Index">Manage Major</a>
                                            <a asp-controller="Subject" asp-action="Index">Manage Subject</a>
                                            <a asp-controller="Author" asp-action="Index">Manage Author</a>
                                            <a asp-controller="Home" asp-action="Logout">Logout</a>
                                        </div>
                                    </div>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>


        <div class="fs_menu_overlay"></div>

        <div class="fs_menu_overlay"></div>

        <div class="container product_section_container">
            <div class="row">

                <body>
                    <div class="container">
                        <div class="table-wrapper">
                            <div class="table-title">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h2>List Subjects</h2>
                                    </div>
                                    <div class="col-sm-6">
                                        <a asp-action="Create"><button class="btn btn-success">Add new
                                                Subject</button></a>
                                        @* <a href="#deleteUserModal" class="btn btn-danger" data-toggle="modal"><i
                                            class="material-icons">&#xE15C;</i> <span>Delete</span></a> *@
                                    </div>
                                </div>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                        <th>Subject ID</th>
                                        <th>Subject Name</th>
                                        </th>
                                        @foreach (var subject in Model.subjectList)
                                        {
                                        <tr>
                                            <td></td>
                                            <td>@subject.SubjectId</td>
                                            <td>@subject.Subname</td>
                                            <td>
                                                <a class="fa fa-pencil fa-2x" aria-hidden="true" asp-controller="Subject"
                                                asp-action="Edit" asp-route-Id="@subject.SubjectId"></a>
                                                <a data-confirm="Are you sure you want to delete this record?"
                                                style="padding-left:15px" class="fa fa-trash fa-2x" aria-hidden="true"
                                                asp-controller="Subject" asp-action="DeleteOnce"
                                                asp-route-Id="@subject.SubjectId"></a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                            </table>
                        </div>
                        <div class="table-wrapper">
                            <div class="table-title">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h2>List Deleted Subjects</h2>
                                    </div>
                                    <div class="col-sm-6">
                                    </div>
                                </div>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                        <th>Subject ID</th>
                                        <th>Subject Name</th>
                                        </th>
                                        @foreach (var obj in Model.subjectDeletedList)
                                        {
                                        <tr>
                                            <td></td>
                                            <td>@obj.SubjectId</td>
                                            <td>@obj.Subname</td>
                                            <td>
                                                <a class="fa fa-undo fa-2x" aria-hidden="true" asp-controller="Subject"
                                                asp-action="Restore" asp-route-Id="@obj.SubjectId"></a>
                                                <a data-confirm="This will be deleted out of database, are you sure?"
                                                style="padding-left:15px" class="fa fa-trash fa-2x" aria-hidden="true"
                                                asp-controller="Subject" asp-action="Delete"
                                                asp-route-Id="@obj.SubjectId"></a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </body>


</body>

</html>
<!-- partial -->
<script src="~/js/jquery-3.2.1.min.js"></script>
<script src="~/css/bootstrap4/popper.js"></script>
<script src="~/css/bootstrap4/bootstrap.min.js"></script>
<script src="~/plugins/Isotope/isotope.pkgd.min.js"></script>
<script src="~/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
<script src="~/plugins/easing/easing.js"></script>
<script src="~/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
<script src="~/js/categories_custom.js"></script>



</html>