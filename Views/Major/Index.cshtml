@model IEnumerable<Major>
@{
    ViewData["Title"] = "Major Index";
} 

<div class="container">
    <h2>
        <a asp-controller="Major" asp-action="Create">Create new Major</a>
    </h2>
    <h2>Majors</h2>
    <table class="table table-striped table-bordered" id="sortTable">
        <thead>
            <tr>
                <th>Major ID</th>
                <th>Major Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var major in Model)
            {
                <tr>
                    <td>@major.MajorId</td>
                    <td>@major.MajorName</td>
                    <td>
                        <a asp-controller="Major" asp-action="Detail" asp-route-id="@major.MajorId">View details</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>