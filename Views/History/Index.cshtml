                <body>
                    <div class="container">
                        <div class="table-wrapper">
                            <div class="table-title">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h2>Reading History</h2>
                                    </div>
                                    <div class="col-sm-6"> 
                                        <a asp-route-userId="@Model.id" asp-action="DeleteAll" asp-controller="History"class="btn btn-danger" ><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>
                                    </div>
                                </div>
                            </div>
                            
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                        <th>Book Name</th>
                                        <th>Date Time</th>
                                        </th>
										</tr>
                                        @foreach (ReadingHistory rh in Model.historyList){
                                        <tr>
                                            <td>
											<img src="@rh.Book.BookCover" height="100" width="100" alt="">
											</td>
                                            <td>@rh.Book.BookName</td>
                                            <td>@rh.DateRead</td>
                                            
                                            <td>
                                                <a asp-route-userId="@rh.UserId" asp-route-bookId="@rh.BookId" asp-route-DateRead="@rh.DateRead"  asp-action="Delete" asp-controller="History" ><i class="fa fa-trash fa-2x"></i > <span></span></a>

                                             </td>
                                        </tr>
                                        }
                                    </tbody>
                            </table>
                            <div class="clearfix">

                            </div>
                        </div>
                    </div>
